<div class="hero-unit">
  <%= image_tag 'logo.png', :class => 'pull-right' %>
  <h1>Users</h1>

  <table>
    <th>Picture</th>
    <th><%= sort_link "Name", :name %></th>
    <th>Membership Level</th>
    <th>Last time in Space</th>
    <% @users.each do |user| %>
      <tr>
        <td width="90px"><%= image_tag user.gravatar_url %></td>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td>Unimplemented</td>
        <td>Unimplemented</td>
      </tr>
    <% end %>
  </table>
  
</div>
