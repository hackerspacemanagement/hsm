<%= form_for @tool, :html => { :multipart => true } do |t| %>
  <p>
  <%= t.label "Name: " %>
  <%= t.text_field :name %>
  </p>
  <p>
  <%= t.label "Category: " %>
  <%= t.select :tool_category_id, @categories %>&nbsp;
  <%= link_to "Add new Category", new_tool_category_path %>
  </p>
  <p>
  <%= t.label "Serial Number or ID: "%>
  <%= t.text_field :serial_id %>
  </p>
  <p>
  <%= t.label "Description: " %>
  <%= t.text_field :description %>
  </p>
  <p>
  <%= t.label "Tool Picture: " %>
  <%= t.file_field :picture %>
  </p>
  <p>
  <%= t.label "Owner: " %>
  <%= t.select :user_id, options_for_select(@users, current_user.id) %>
  </p>
  <%= t.submit %>
<% end %>
