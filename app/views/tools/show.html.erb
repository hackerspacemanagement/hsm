<div class="hero-unit"%>
  <%= image_tag 'logo.png', :class => 'pull-right' %>
  <h1><%= @tool.name %></h1>

  <% if @tool.picture == nil %>
    <p><%= image_tag @tool.picture.url %></p>
  <%end%>
  <p>Name:&nbsp;<%= @tool.name %></p>
  <p>Owner:&nbsp;<%= @user.full_name %></p>
  <p>Serial Number:&nbsp;<%= @tool.serial_id %></p>
  <p>Location:&nbsp;<%= @tool.location %></p>
  <p>Category:&nbsp;<%= @tool.tool_category ? @tool.tool_category.name : "None" %></p>
  <p>
    <%= raw(BlueCloth.new(@tool.description).to_html) %>
  </p>
  <%= link_to "Edit me!", edit_tool_path(@tool.id), :class => 'btn' %>
</div>
