= form_for @skill, :html => { :multipart => true }  do |s|
  %p
    = s.label "Name: "
    = s.text_field :name
  %p
    = s.label "Description: "
    = s.text_field :description
  %p
    = s.label "More Info URL: "
    = s.text_field :more_info_url
  %p
    = s.label "Role required to grant permission: "
    = s.select :role_required_to_grant, @roles

  = s.submit
