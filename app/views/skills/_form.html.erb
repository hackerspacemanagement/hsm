<%= form_for @skill, :html => { :multipart => true } do |s| %>
  <p>
  <%= s.label "Name: " %>
  <%= s.text_field :name %>
  </p>
  <p>
  <%= s.label "Description: " %>
  <%= s.text_field :description %>
  </p>
  <p>
  <%= s.label "More Info URL: " %>
  <%= s.text_field :more_info_url %>
  </p>
  <p>
  <%= s.label "Role require to grant permission: " %>
  <%= s.select :role_require_to_grant, options_for_select(@roles, @roles.last[1]) %>
  </p>

  <%= s.submit %>
<% end %>
